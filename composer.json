{
    "name": "jhoncytech/keepcoding-php-base-app",
    "description": "Aplicación base para pruebas en módulos de Keepcoding Academy",
    "type": "library",
    "keywords": ["keepcoding", "bootcamp", "devops"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jhoncytech\\KcBaseApp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jhonny A. Gomez S.",
            "email": "jhonny@jhoncytech.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {},
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jhonnygo/keepcoding-php-base-app.git"
        }
    ],
    "extra": {
        "installer-paths": {
            "src/tests": ["jhoncytech/keepcoding-php-base-app"],
            "src/img": ["jhoncytech/keepcoding-php-base-app"],
            "src/lib": ["jhoncytech/keepcoding-php-base-app"]
        },
        "post-autoload-dump": [
            "cp -r src/tests /var/www/html/tests",
            "cp -r src/img /var/www/html/img",
            "cp -r src/lib /var/www/html/lib"
        ]
    }
}
